generator client {
  provider = "prisma-client-js"
  output   = "./generated/nearai-cloud"
}

datasource db {
  provider  = "postgresql"
  url       = env("NEAR_AI_CLOUD_DB_URL")
  directUrl = env("NEAR_AI_CLOUD_DB_DIRECT_URL")
}

model NearAi_MessageSignatures {
  model_id          String      @db.Text
  model             String      @db.Text
  chat_id           String      @db.Text
  text              String      @db.Text
  signature         String      @db.Text
  signing_address   String      @db.Text
  signing_algo      String      @db.Text
  created_at        DateTime    @db.Timestamptz @default(now())
  updated_at        DateTime    @db.Timestamptz @default(now()) @updatedAt

  @@id([model_id, chat_id, signing_algo])
}
